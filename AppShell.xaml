<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TibiaTools.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TibiaTools"
    Shell.FlyoutBehavior="Flyout"
    Title="TibiaTools">
    
    <FlyoutItem 
        Title="Calculadora" 
        IsEnabled="True" 
        FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
            Title="Calculadora de Level"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="CalculadoraDeLevel" />
    </FlyoutItem>

    <FlyoutItem 
        Title="Conversor TC" 
        IsEnabled="True" 
        FlyoutDisplayOptions="AsMultipleItems">
    <ShellContent
            Title="Conversor TC"
            ContentTemplate="{DataTemplate local:ConversorTC}"
            Route="ConversorTC" />
    </FlyoutItem>
</Shell>
